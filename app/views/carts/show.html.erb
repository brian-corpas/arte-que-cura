<div class="row d-flex justify-content-center" style="margin-bottom: 5%">
  <h2>O meu Carrinho</h2>
</div>
<div class="show_box">
   <div class="items_display">
      <% @cart.line_items.each do |line_item| %>
      <ul>
       <table class="table-light">
        <th>
         <%= cl_image_tag line_item.product.photo.key, height: 100, width: 200, crop: :thumb %>
        <ul>Artigo: <%= line_item.product.name %></ul>
        <ul>Pre√ßo: <%= humanized_money_with_symbol(line_item.product.price) %></>
        <ul>Quantidade: <%= line_item.quantity %></ul>
        <ul>
          <li>
            <%= link_to "+1 unidade", line_item_add_path(line_item), method: :post %>
            <%= link_to "-1 unidade", line_item_reduce_path(line_item), method: :post %>
          </li>
          <li>
            <%= link_to "Remover item", line_item_path(line_item), method: :delete %>
          </li>
        </ul>
        </th>
        </table>
       </ul>
      <% end %>
    </div>

    <div class="sub_total" style="text-align: center;">
      <h3>Sub total: <%= humanized_money_with_symbol(@cart.sub_total) %></h3>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'cart_id', @cart.id %>
        <%= submit_tag 'Checkout', class: 'btn btn-success' %>
      <% end %>
      <br>
      <%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
</div>
