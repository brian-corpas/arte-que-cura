<h2>Cart show</h2>
<ul>
  <% @cart.line_items.each do |line_item| %>
     <%= cl_image_tag line_item.product.photo.key, height: 100, width: 200, crop: :thumb %>
    <li>Item: <%= line_item.product.name %>/ Price: <%= humanized_money_with_symbol(line_item.product.price) %>/ Quantity: <%= line_item.quantity %></li>
    <ul>
      <li>
        <%= link_to "Add one", line_item_add_path(line_item), method: :post %>
        <%= link_to "Reduce one", line_item_reduce_path(line_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", line_item_path(line_item), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= humanized_money_with_symbol(@cart.sub_total) %></h3>
<%= form_tag orders_path do %>
  <%= hidden_field_tag 'cart_id', @cart.id %>
  <%= submit_tag 'Checkout', class: 'btn btn-primary' %>
<% end %>
<%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>
