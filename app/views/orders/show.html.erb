<div class="container" style="margin-top: 5%">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @order.product.photo.key, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <h3><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></h3>
           <ul class="list-unstyled">
             <% @order.line_items.each do |item| %>

             <li><strong>PRODUCT</strong> <%=item.quantity%> x <%= item.product.name %></strong> for <strong><%= humanized_money_with_symbol(item.product.price_cents) %></li>
             <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
            <% end %>
           </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>

<div class="container mt-2" style="margin-bottom: 10%">
  <div class="row d-flex justify-content-center">
    <div class="col-align-self-center">
      <div style="margin-top: 30%">
            <%= link_to "Back", products_path, class: "btn btn-outline-dark"%>
      </div>
    </div>
  </div>
</div>
